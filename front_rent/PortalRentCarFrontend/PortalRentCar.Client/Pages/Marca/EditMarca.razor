@page "/marca/editar/{Id:int}"
@inject IMarcaProxy Proxy
@inject NavigationManager NavigationManager
@inject IToastService ToastService

<EditMarcaComponent Request="Request" Titulo="Editar Marca" OnGrabar="OnActualizar" />

<LoadingComponent IsLoading="IsLoading" />

@code {
    
    [Parameter]
    public int Id { get; set; }

    public MarcaDtoRequest Request { get; set; } = new();
    public bool IsLoading { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Request = await Proxy.FindByIdAsync(Id);
    }

    private async Task OnActualizar()
    {
        try
        {
            IsLoading = true;
            await Proxy.UpdateAsync(Id, Request);
            ToastService.ShowSuccess("Registro actualizado");
            NavigationManager.NavigateTo("/marca/list");
        }
        catch (Exception ex)
        {
            ToastService.ShowError(ex.Message);
        }
        finally
        {
            IsLoading = false;
        }
    }

}